<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Chỉnh sửa danh mục</h1>

    <% if (locals.errorMessage) { %>
        <div class="alert alert-danger">
            <%= errorMessage %>
        </div>
        <% } %>

            <!-- Card -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Thông tin danh mục</h6>
                </div>
                <div class="card-body">
                    <form action="/admin/categories/edit/<%= category._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <label for="name">Tên danh mục <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="name" name="name" value="<%= category.name %>"
                                required>
                        </div>

                        <div class="form-group">
                            <label for="description">Mô tả</label>
                            <textarea class="form-control" id="description" name="description"
                                rows="3"><%= category.description || '' %></textarea>
                        </div>

                        <div class="form-group">
                            <label for="active">Trạng thái</label>
                            <select class="form-control" id="active" name="active">
                                <option value="true" <%=category.active ? 'selected' : '' %>>Hoạt động</option>
                                <option value="false" <%=!category.active ? 'selected' : '' %>>Không hoạt động</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                        <a href="/admin/categories" class="btn btn-secondary">Hủy</a>
                    </form>
                </div>
            </div>
</div>