<!-- Danh mục nổi bật -->
<section class="featured-categories mb-5">
    <div class="container">
        <h2 class="section-title text-center mb-4">Danh mục nổi bật</h2>

        <div class="row">
            <% if(typeof featuredCategories !=='undefined' && featuredCategories.length> 0) { %>
                <% featuredCategories.forEach(category=> { %>
                    <div class="col-md-4 col-sm-6 mb-4">
                        <div class="card h-100">
                            <% if(category.image) { %>
                                <img src="<%= category.image %>" class="card-img-top" alt="<%= category.name %>">
                                <% } else { %>
                                    <div class="bg-light text-center py-4">
                                        <i class="fas fa-box fa-4x text-muted"></i>
                                    </div>
                                    <% } %>
                                        <div class="card-body text-center">
                                            <h5 class="card-title">
                                                <%= category.name %>
                                            </h5>
                                            <% if(category.description) { %>
                                                <p class="card-text text-muted">
                                                    <%= category.description.substring(0, 80) %>
                                                        <%= category.description.length> 80 ? '...' : '' %>
                                                </p>
                                                <% } %>
                                                    <a href="/products/category/<%= category.slug %>"
                                                        class="btn btn-outline-primary">Xem sản phẩm</a>
                                        </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <div class="col-12 text-center">
                                <p>Không có danh mục nổi bật nào.</p>
                            </div>
                            <% } %>
        </div>
    </div>
</section>

<!-- Sản phẩm nổi bật -->
<section class="featured-products mb-5">
    <div class="container">
        <h2 class="section-title text-center mb-4">Sản phẩm nổi bật</h2>

        <div class="row">
            <% if(typeof featuredProducts !=='undefined' && featuredProducts.length> 0) { %>
                <% featuredProducts.forEach(product=> { %>
                    <div class="col-md-3 col-sm-6 mb-4">
                        <div class="card product-card h-100">
                            <div class="product-img-container">
                                <img src="<%= product.mainImage %>" class="card-img-top" alt="<%= product.name %>">
                                <% if(product.salePrice && product.salePrice < product.price) { %>
                                    <span class="badge bg-danger position-absolute top-0 start-0 m-2">Giảm giá</span>
                                    <% } %>
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title product-title">
                                    <%= product.name %>
                                </h5>
                                <p class="card-text text-muted small mb-2">
                                    <%= product.category.name %>
                                </p>
                                <div class="mb-2">
                                    <% if(product.salePrice && product.salePrice < product.price) { %>
                                        <span class="text-danger fw-bold">
                                            <%= product.salePrice.toLocaleString('vi-VN') %>đ
                                        </span>
                                        <span class="text-muted text-decoration-line-through ms-2">
                                            <%= product.price.toLocaleString('vi-VN') %>đ
                                        </span>
                                        <% } else { %>
                                            <span class="fw-bold">
                                                <%= product.price.toLocaleString('vi-VN') %>đ
                                            </span>
                                            <% } %>
                                </div>
                                <div class="d-flex justify-content-between mt-auto">
                                    <a href="/products/<%= product.slug %>" class="btn btn-sm btn-outline-primary">Chi
                                        tiết</a>
                                    <form action="/cart/add" method="POST">
                                        <input type="hidden" name="productId" value="<%= product._id %>">
                                        <input type="hidden" name="redirect" value="/">
                                        <button type="submit" class="btn btn-sm btn-primary">
                                            <i class="fas fa-cart-plus"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <div class="col-12 text-center">
                                <p>Không có sản phẩm nổi bật nào.</p>
                            </div>
                            <% } %>
        </div>
    </div>
</section>

